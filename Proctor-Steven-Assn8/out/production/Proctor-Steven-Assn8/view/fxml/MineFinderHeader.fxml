<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="5.0" style="-fx-border-color: darkgrey; -fx-border-width: 4; -fx-background-color: lightgrey;" stylesheets="@../styleSheets/cellStyles.css" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.MineFinderHeader">
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
   <children>
      <HBox alignment="CENTER" spacing="5.0">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Difficulty:">
               <font>
                  <Font name="Arial Bold" size="15.0" />
               </font>
            </Text>
            <Text fx:id="difficultyText" strokeType="OUTSIDE" strokeWidth="0.0" text="EASY" />
         </children>
      </HBox>
      <HBox alignment="CENTER" spacing="5.0">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Mode:">
               <font>
                  <Font name="Arial Bold" size="15.0" />
               </font>
            </Text>
            <Text fx:id="modeText" strokeType="OUTSIDE" strokeWidth="0.0" text="TRADITIONAL" />
         </children>
      </HBox>
      <HBox alignment="CENTER" spacing="5.0" VBox.vgrow="ALWAYS">
         <children>
            <VBox alignment="CENTER" spacing="5.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Bombs">
                     <font>
                        <Font name="Arial Bold" size="15.0" />
                     </font>
                  </Text>
                  <Text fx:id="bombCountText" strokeType="OUTSIDE" strokeWidth="0.0" text="10" />
               </children>
            </VBox>
            <Button fx:id="resetButton" mnemonicParsing="false" onAction="#onResetButtonAction" prefHeight="40.0" prefWidth="40.0">
               <HBox.margin>
                  <Insets left="25.0" right="25.0" />
               </HBox.margin>
               <font>
                  <Font name="Arial Bold" size="15.0" />
               </font>
            </Button>
            <VBox alignment="CENTER" spacing="5.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Time">
                     <font>
                        <Font name="Arial Bold" size="15.0" />
                     </font>
                  </Text>
                  <Text fx:id="timerText" strokeType="OUTSIDE" strokeWidth="0.0" text="0" />
               </children>
            </VBox>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
