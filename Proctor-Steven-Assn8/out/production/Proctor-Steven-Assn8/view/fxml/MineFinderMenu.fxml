<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>

<MenuBar xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.MineFinderMenu">
   <menus>
      <Menu mnemonicParsing="false" text="Difficulty">
         <items>
            <CheckMenuItem fx:id="easyItem_DifficultyMenu" mnemonicParsing="false" onAction="#setDifficulty_OnDifficultyMenuAction" selected="true" text="Easy" />
            <CheckMenuItem fx:id="mediumItem_DifficultyMenu" mnemonicParsing="false" onAction="#setDifficulty_OnDifficultyMenuAction" text="Medium" />
            <CheckMenuItem fx:id="hardItem_DifficultyMenu" mnemonicParsing="false" onAction="#setDifficulty_OnDifficultyMenuAction" text="Hard" />
         </items>
      </Menu>
      <Menu mnemonicParsing="false" text="Size">
         <items>
            <CheckMenuItem fx:id="smallItem_SizeMenu" mnemonicParsing="false" onAction="#setSize_OnSizeMenuAction" selected="true" text="Small 10x10" />
            <CheckMenuItem fx:id="mediumItem_SizeMenu" mnemonicParsing="false" onAction="#setSize_OnSizeMenuAction" text="Medium 25x25" />
            <CheckMenuItem fx:id="largeItem_SizeMenu" mnemonicParsing="false" onAction="#setSize_OnSizeMenuAction" text="Large 25x50" />
         </items>
      </Menu>
      <Menu mnemonicParsing="false" text="Mode">
         <items>
            <CheckMenuItem fx:id="traditionalItem_ModeMenu" mnemonicParsing="false" onAction="#setMode_onModeMenuAction" selected="true" text="Traditional" />
            <CheckMenuItem fx:id="speedDemonItem_ModeMenu" mnemonicParsing="false" onAction="#setMode_onModeMenuAction" text="Speed Demon" />
            <CheckMenuItem fx:id="countDownItem_ModeMenu" mnemonicParsing="false" onAction="#setMode_onModeMenuAction" text="Count Down" />
         </items>
      </Menu>
      <Menu mnemonicParsing="false" text="Sound">
         <items>
            <CheckMenuItem fx:id="activeItem_SoundMenu" mnemonicParsing="false" onAction="#setSound_OnSoundMenuAction" selected="true" text="Active" />
         </items>
      </Menu>
   </menus>
</MenuBar>
