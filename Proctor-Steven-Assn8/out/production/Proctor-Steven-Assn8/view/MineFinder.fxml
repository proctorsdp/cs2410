<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="mineFinder" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MineFinderController">
   <children>
      <fx:include fx:id="menu" source="MineFinderMenu.fxml" />
      <BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity">
         <center>
            <TilePane fx:id="mineField_TilePane" prefColumns="10" prefRows="10" style="-fx-border-color: grey; -fx-border-width: 8;" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
            </TilePane>
         </center>
         <top>
            <fx:include fx:id="header" source="MineFinderHeader.fxml" />
         </top>
      </BorderPane>
   </children>
</VBox>
